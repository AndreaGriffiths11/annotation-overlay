{
  "name": "annotation-overlay",
  "version": "1.2.1",
  "description": "System-wide screen annotation overlay",
  "main": "main.js",
  "author": "Annotation Overlay Contributors",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "dev.annotation.overlay",
    "productName": "Annotation Overlay",
    "compression": "maximum",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  }
}